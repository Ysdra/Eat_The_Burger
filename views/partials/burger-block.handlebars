<li class="list-group-item bg-secondary">
    <div class="row">
        <i class="fas fa-hamburger fa-2x ml-3"></i> <h4 class="ml-3">{{burger_name}}</h4>
    </div>

    <div class="d-flex justify-content-between">
        <button class="btn {{#if devoured}}btn-success{{else}}btn-warning{{/if}} change-devoured" data-id="{{id}}" data-devour="{{devoured}}">
            {{#if devoured}}Devour{{else}}Delete{{/if}}
        </button>
        <button class="btn btn-danger delete-burger" data-id="{{id}}">
            Delete
        </button>
    </div>
</li>